<navBar title="{{title}}"></navBar>

<!-- 开放时间 -->
<view wx:if="{{id=='open'}}">
  <image mode='widthFix' style='width:100%' src="cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/campus/开放时间.png"></image>
</view>

<!-- 库室分布 -->
<view wx:if="{{id=='room'}}">
  <image mode='widthFix' style='width:100%' src="cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/campus/库室分布.png"></image>
</view>

<!-- 进馆数据 -->
<view class='visit' wx:if="{{id=='visit'}}">
  <view style='text-align:center;color:red'>接口已失效...</view>
  <view class="module">
    <view class="module-bar">
      <view class="module-icon">
        <image style='width:75rpx' mode='widthFix' src='https://cloud-minapp-17768.cloud.ifanrusercontent.com/1g0eqSYWkdJOBqfD.png'></image>
      </view>
      <view class='module-text'>
        <view> </view> 今日进馆:
        <text style='color:red'>{{lib.total}}</text>人次
        <view> </view>
      </view>
    </view>
    <view class='table-head'>
      <view style='flex:4'>学院</view>
      <view style='flex:1'>人数</view>
      <view style='flex:1'>人次</view>
      <view style='flex:1'>平均</view>
    </view>
    <view class='table-body' wx:for="{{lib.college_list}}" wx:key="{{index}}">
      <view style='flex:4'>{{item[0]}}</view>
      <view style='flex:1'>{{item[1]}}</view>
      <view style='flex:1'>{{item[2]}}</view>
      <view style='flex:1;color:brown'>{{item[3]}}</view>
    </view>
    <text style='color:gray;font-size:80%;padding:10rpx'>更新于 {{lib.update_time}}</text>
  </view>
</view>

<!-- 校园全景 -->
<view wx:if="{{id=='overall'}}" class="overall">

  <view style='margin-top:30rpx'>暂无法使用内嵌网页</view>
  <view>可关注服务号查看</view>

  <image mode='widthFix' bindtap='preview' src='cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/res/qrcode.jpg'></image>
  <view style='margin:30rpx;font-size:85%;color:grey'>扫码或搜索「广大派」即可关注服务号</view>
  <image mode='widthFix' style='width:500rpx;' src='cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/tmp/WechatIMG506.jpeg'></image>

</view>